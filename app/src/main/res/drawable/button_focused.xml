<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_hovered="true" android:state_focused="true">
        <shape>
            <gradient
                android:endColor="#88CFD3"
                android:startColor="#62A2A1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#00828A" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="18dp"
                android:top="13dp"
                android:right="18dp"
                android:bottom="13dp" />
        </shape>
    </item>
</selector>